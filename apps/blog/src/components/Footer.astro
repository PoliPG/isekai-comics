---
import { siteConfig } from '@/site-config'
import TwitterIcon from './icons/social/TwitterIcon.astro'
import TiktokIcon from './icons/social/TiktokIcon.astro'
import InstagramIcon from './icons/social/InstagramIcon.astro'
import Image from 'astro/components/Image.astro'
const today = new Date()
---

<footer class="border-t">
  <div class="py-8"></div>
  <div class="px-16 py-6 flex w-full bg-gray-200 items-center">
    <Image
      src="/images/logo_icon.png"
      alt="Icon logo footer"
      width={50}
      height={50}
    />
    <p class="flex-grow text-center">
      &copy;
      {today.getFullYear()} &nbsp; {siteConfig.author}. Todos los derechos
      reservados.
    </p>
    <div class="flex items-center gap-4">
      <a><TwitterIcon /></a><a><TiktokIcon width={19} height={19} /></a>
      <a><InstagramIcon width={24} height={24} /></a>
    </div>
  </div>
</footer>
